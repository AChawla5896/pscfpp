#include "Dimension.h"
#include "RField.h"
#include "KField.h"

template <int D>
class Grid {

   void setUnitCell(const UnitCell& unitCell)
   void setDimensions(IntVector<D>);
   void allocate()
   void deallocate()
   void computeKSq()
   IntVector<D> kToFFT(IntVector<D>)
   IntVector<D> kToBZ(IntVector<D>)
   void computeMaxKabs()

   const KField& kSq()
   double maxKSq()
   
private:

   IntVector<D> dimensions_
   GridField ksq_;
   double maxKSq_;

}
